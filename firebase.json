{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites" : [
      {
        "source" : "/api/**",
        "function" : "app"
      }  
    ],
    "cleanUrls": true
  },
  "functions" : {
      "source" : "server"
  }
}
